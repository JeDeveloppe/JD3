{% extends "site/components/_base.html.twig" %}
{% block title %}{{  h1 }}{% endblock %}
{% block body %}

    <h1 class="col-12 text-center my-5">{{ h1 }}</h1>

    <div class="row g-0 justify-content-center mb-5">
        {% for training in trainings %}
            <div class="col-12 col-md-10 col-lg-8 col-xl-7">
                <div class="card my-5 shadow-sm rounded-3">
                    <div class="card-body p-4">
                        <h2 class="card-title display-6 fw-bold text-primary">{{ training.name | raw }}</h2>
                        <h3 class="card-subtitle lead mb-3 text-muted">{{ training.diplomeName | raw }}</h3>
                        
                        {# Content wrapper with better styling #}
                        <div class="bg-light p-3 border rounded-2 mb-4">
                            {{ training.description | raw }}
                        </div>
                        
                        {# Date information at the bottom of the card #}
                        <div class="row g-0 justify-content-end">
                            <div class="col-12 text-end small text-muted">
                                <span>DÃ©but: <span class="fw-bold">{{ training.startedAt | date("d/m/Y") }}</span></span>
                                <span class="mx-2">-</span>
                                <span>Fin: <span class="fw-bold">{{ training.endAt ? training.endAt | date("d/m/Y") : "Toujours en cours..." }}</span></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    {{ knp_pagination_render(trainings, 'site/components/_pagination.html.twig') }}

{% endblock %}