{% extends "site/components/_base.html.twig" %}
{% block title %}
    {{ h1 }}
{% endblock %}
{% block body %}

    <div class="container my-5">
        <div class="row g-0 justify-content-center">
            <h1 class="col-12 text-center display-4 fw-bold text-primary mb-3">{{ h1 }}</h1>
            
            {% include "site/components/_breadcrumb.html.twig" with {category: category} %}
            {% include "site/forms/_search_article.html.twig" %}
        </div>

        <div class="row g-3 justify-content-center">
            <div class="col-12 col-md-10 col-lg-8">
                {% if articles is not empty %}
                    {% for article in articles %}
                        <div class="card my-3 shadow-sm border-0">
                            <div class="card-body d-flex flex-column flex-sm-row justify-content-between align-items-sm-center">
                                <h2 class="h5 mb-2 mb-sm-0">{{ article.name }}</h2>
                                <div class="d-flex align-items-center">
                                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                                    <a class="btn btn-dark text-white me-2" target="_blank" href="{{ ea_url().setController('App\\Controller\\Admin\\ArticleCrudController').setAction('edit')}}">
                                            <span class="fa fa-edit"></span>
                                        </a>
                                    {% endif %}
                                    <a class="btn btn-primary" href="{{ path('mapped_article_details', {categorySlug: category.slug, articleSlug: article.slug }) }}">
                                        Voir l'article
                                    </a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <div class="alert alert-info text-center mt-4" role="alert">
                        <i class="fa-solid fa-circle-info me-2"></i>
                        Aucune astuce pour le moment...! (J'y travaille)
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}