{% extends "site/components/_base.html.twig" %}
{% block title %}Contactez- moi !{% endblock %}
{% block body %}

	<h1 class="col-12 text-center my-5">{{ h1 }}</h1>

	<div class="row g-0 justify-content-center mb-5">
		<div class="col-11 col-sm-9 col-md-8 col-xl-7 col-xxl-6 px-xl-5">

			{{ form_start(form) }}
				<div class="col-12">
					<label class="form-label">{{ form_label(form.email) }}</label>
					{{ form_widget(form.email) }}
				</div>
				<div class="col-12">
					<label class="form-label">{{ form_label(form.sujet) }}</label>
					{{ form_widget(form.sujet) }}
				</div>
				<div class="col-12">
					<label class="form-label">{{ form_label(form.message) }}</label>
					{{ form_widget(form.message) }}
				</div>
				<div class="col-12 text-center">
					<button type="submit" class="btn btn-primary">Envoyer</button>
				</div>
			{{ form_end(form) }}

		</div>

	</div>


{% endblock %}
